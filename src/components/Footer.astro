---
const today = new Date();
---

<footer class="site-footer">
  <div class="container footer-inner">
    <div class="footer-brand">
      <span class="brand-text">PwnFuzz Labs</span>
      <p class="copyright">
        &copy; {today.getFullYear()} All rights reserved.
      </p>
    </div>
    
    <div class="footer-links">
      <a href="https://twitter.com/pwnfuzz" target="_blank" rel="noopener noreferrer">
        Twitter
      </a>
      <a href="https://github.com/pwnfuzz" target="_blank" rel="noopener noreferrer">
        GitHub
      </a>
      <a href="/rss.xml">
        RSS
      </a>
    </div>
  </div>
</footer>

<style>
  footer {
    padding: 2em 1em 6em 1em;
    background: transparent; /* Transparent to show global background */
    color: var(--fg-secondary);
    text-align: center;
    border-top: 1px solid var(--border-subtle);
    margin-top: 4rem;
  }
  .social-links {
    display: flex;
    justify-content: center;
    gap: 1em;
    margin-top: 1em;
  }
  .social-links a {
    text-decoration: none;
    color: var(--fg-secondary);
  }
  .social-links a:hover {
    color: var(--fg-primary);
  }

  .copyright {
    margin: 0;
    font-size: 0.9rem;
    color: var(--fg-muted);
  }

  .footer-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-links a {
    color: var(--fg-secondary);
    font-size: 0.95rem;
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: var(--accent-primary);
  }

  @media (max-width: 600px) {
    .footer-inner {
      flex-direction: column;
      align-items: flex-start;
      gap: 2rem;
    }
  }
</style>
