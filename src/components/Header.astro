---
import { Astro } from 'astro';
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/breakdowns/', label: '1Day Breakdowns' },
  { href: '/about', label: 'About' },
];
---
<header class="site-header">
  <div class="header-inner">
    <a href="/" class="site-logo">PwnFuzz<span> Labs</span></a>
    <nav class="main-nav">
      <ul>
        {navLinks.map(link => (
          <li><a href={link.href} class={Astro.url.pathname.startsWith(link.href) && link.href !== '/' ? 'active' : (Astro.url.pathname === link.href ? 'active' : '')}>{link.label}</a></li>
        ))}
      </ul>
    </nav>
  </div>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@600;700&display=swap');
    .site-header {
      font-family: 'Inter', sans-serif;
      background: #fff;
      box-shadow: 0 2px 8px rgba(124, 58, 237, 0.06);
      border-bottom: 2px solid #e5e7eb;
      position: sticky;
      top: 0;
      z-index: 100;
    }
    .header-inner {
      max-width: 1550px;
      margin: 0 auto;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0.7rem 1.5rem;
    }
    .site-logo {
      font-weight: 700;
      font-size: 1.4rem;
      color: #7c3aed;
      letter-spacing: 1px;
      text-decoration: none;
    }
    .site-logo span {
      font-weight: 600;
      color: #333;
    }
    .main-nav ul {
      display: flex;
      gap: 2rem;
      list-style: none;
      margin: 0;
      padding: 0;
    }
    .main-nav a {
      color: #222;
      text-decoration: none;
      font-weight: 600;
      font-size: 1rem;
      padding-bottom: 2px;
      border-bottom: 2px solid transparent;
      transition: border 0.2s, color 0.2s;
    }
    .main-nav a.active {
      color: #7c3aed;
      border-bottom: 2px solid #7c3aed;
    }
    @media (max-width: 700px) {
      .header-inner {
        flex-direction: column;
        align-items: flex-start;
        padding: 0.7rem 1rem;
      }
      .main-nav ul {
        gap: 1.2rem;
        flex-wrap: wrap;
      }
      .site-logo {
        margin-bottom: 0.5rem;
      }
    }
  </style>
</header>
