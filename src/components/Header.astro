---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/breakdowns/', label: '1Day Breakdowns' },
  { href: 'https://www.pwnfuzz.com', label: 'About', external: true },
];
---

<header class="site-header" id="siteHeader">
  <div class="header-inner container">
    <a href="/" class="site-logo">
      <span class="logo-text">PwnFuzz</span>
      <span class="logo-suffix">Labs</span>
    </a>
    <nav class="main-nav">
      <ul>
        {navLinks.map(link => (
          <li>
            <a 
              href={link.href} 
              class={Astro.url.pathname.startsWith(link.href) && link.href !== '/' ? 'active' : (Astro.url.pathname === link.href ? 'active' : '')} 
              target={link.external ? '_blank' : undefined} 
              rel={link.external ? 'noopener' : undefined}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 1000;
    width: 100%;
    background: rgba(255, 255, 255, 0.7); /* Light Glassy */
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(226, 232, 240, 0.6); /* Subtle border */
    transition: transform 0.3s ease;
  }

  .site-header.hide {
    transform: translateY(-100%);
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 70px;
  }

  .site-logo {
    display: flex;
    align-items: center;
    gap: 0.3rem;
    font-family: var(--font-mono);
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--fg-primary);
    text-decoration: none;
    letter-spacing: -0.03em;
  }

  .logo-text {
    color: var(--fg-primary); /* Clean dark text */
  }

  .logo-suffix {
    color: var(--fg-muted);
    font-size: 0.9em;
    font-weight: 500;
  }

  .main-nav ul {
    display: flex;
    gap: 0.5rem; /* Reduced gap for pill spacing */
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .main-nav a {
    color: var(--fg-secondary);
    font-size: 0.9rem;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 20px; /* Pill shape */
    transition: all 0.2s ease;
    text-decoration: none;
    border: none;
  }

  .main-nav a:hover {
    color: var(--fg-primary);
    background: rgba(0, 0, 0, 0.05); /* Subtle hover bg */
  }

  .main-nav a.active {
    color: var(--fg-primary);
    background: rgba(0, 0, 0, 0.08); /* Active pill */
    font-weight: 600;
  }

  /* Remove old underline styles */
  .main-nav a.active::after {
    display: none;
  }

  @media (max-width: 768px) {
    .header-inner {
      flex-direction: column;
      height: auto;
      padding: 1rem;
      gap: 1rem;
    }
    
    .main-nav ul {
      gap: 0.5rem;
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>

<script>
  let lastScroll = 0;
  const header = document.getElementById('siteHeader');

  window.addEventListener('scroll', () => {
    const currentScroll = window.scrollY;
    
    if (currentScroll <= 0) {
      header?.classList.remove('hide');
      return;
    }

    if (currentScroll > lastScroll && currentScroll > 80) {
      // Scrolling down
      header?.classList.add('hide');
    } else {
      // Scrolling up
      header?.classList.remove('hide');
    }
    
    lastScroll = currentScroll;
  });
</script>
