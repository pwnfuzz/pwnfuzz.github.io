---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/breakdowns/', label: '1Day Breakdowns' },
  { href: 'https://www.pwnfuzz.com', label: 'About', external: true },
];
---
<header class="site-header" id="siteHeader">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@700&display=swap" rel="stylesheet">
  </head>
  <div class="header-inner">
    <a href="/" class="site-logo"><span class="logo-prompt">&gt;</span> <span class="logo-mono">PwnFuzz</span><span> Labs</span></a>
    <nav class="main-nav">
      <ul>
        {navLinks.map(link => (
          <li><a href={link.href} class={Astro.url.pathname.startsWith(link.href) && link.href !== '/' ? 'active' : (Astro.url.pathname === link.href ? 'active' : '')} target={link.external ? '_blank' : undefined} rel={link.external ? 'noopener' : undefined}>{link.label}</a></li>
        ))}
      </ul>
    </nav>
  </div>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@600;700&display=swap');
    .site-header {
      font-family: 'Inter', sans-serif;
      background: var(--drac-bg-alt);
      box-shadow: 0 2px 8px rgba(40,42,54,0.10);
      border-bottom: 2px solid var(--drac-selection);
      position: sticky;
      top: 0;
      z-index: 100;
    }
    .header-inner {
      max-width: 1550px;
      margin: 0 auto;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0.7rem 1.5rem;
    }
    .site-logo {
      font-weight: 700;
      font-size: 1.4rem;
      color: var(--drac-pink);
      letter-spacing: 1px;
      text-decoration: none;
      display: flex;
      align-items: center;
      gap: 0.2em;
    }
    .logo-prompt {
      font-family: 'JetBrains Mono', monospace;
      color: var(--drac-green);
      font-size: 1.3rem;
      font-weight: 700;
      margin-right: 0.1em;
      user-select: none;
    }
    .logo-mono {
      font-family: 'JetBrains Mono', monospace;
      font-size: 1.35rem;
      color: var(--drac-pink);
      font-weight: 700;
      letter-spacing: 0.5px;
    }
    .site-logo span {
      font-weight: 600;
      color: var(--drac-fg);
    }
    .main-nav ul {
      display: flex;
      gap: 2rem;
      list-style: none;
      margin: 0;
      padding: 0;
    }
    .main-nav a {
      color: var(--drac-cyan);
      text-decoration: none;
      font-weight: 600;
      font-size: 1rem;
      padding-bottom: 2px;
      border-bottom: 2px solid transparent;
      transition: border 0.2s, color 0.2s;
    }
    .main-nav a.active {
      color: var(--drac-green);
      border-bottom: 2px solid var(--drac-green);
    }
    @media (max-width: 700px) {
      .header-inner {
        flex-direction: column;
        align-items: flex-start;
        padding: 0.7rem 1rem;
      }
      .main-nav ul {
        gap: 1.2rem;
        flex-wrap: wrap;
      }
      .site-logo {
        margin-bottom: 0.5rem;
      }
    }
    .site-header.hide-on-scroll {
      transform: translateY(-100%);
      transition: transform 0.35s cubic-bezier(0.4,0,0.2,1);
    }
    .site-header {
      transition: transform 0.35s cubic-bezier(0.4,0,0.2,1);
    }
  </style>
  <script is:inline>
    let lastScrollY = window.scrollY;
    let ticking = false;
    function onScroll() {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          const header = document.getElementById('siteHeader');
          if (window.scrollY > lastScrollY && window.scrollY > 40) {
            header.classList.add('hide-on-scroll');
          } else {
            header.classList.remove('hide-on-scroll');
          }
          lastScrollY = window.scrollY;
          ticking = false;
        });
        ticking = true;
      }
    }
    window.addEventListener('scroll', onScroll);
  </script>
</header>
