---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
import { getCollection, type CollectionEntry } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const postsUnprocessed = (await getCollection('blog')).filter(
  post => post.data.summary || post.data.description
).sort(
  (a: CollectionEntry<'blog'>, b: CollectionEntry<'blog'>) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const posts = await Promise.all(
  postsUnprocessed.map(async (post) => {
    const wordCount = (post.body || '').split(/\s+/).length;
    const readingTime = `${Math.max(1, Math.ceil(wordCount / 200))} min read`;
    return {
      ...post,
      readingTime,
    };
  })
);

const POSTS_PER_PAGE = 10; // List view can handle more items
const paginatedPosts = posts.slice(0, POSTS_PER_PAGE);
const totalPages = Math.ceil(posts.length / POSTS_PER_PAGE);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Blog | ${SITE_TITLE}`} description="Technical writeups and security research." />
  </head>
  <body>
    <Header />
    <main class="container">
      <section class="intro-section animate-fade-in">
        <h1 class="page-title">Articles</h1>
        <p class="page-subtitle">Technical deep dives into security, engineering, and fuzzing.</p>
      </section>

      <div class="posts-list animate-fade-in" style="animation-delay: 0.1s;">
        {paginatedPosts.length === 0 ? (
          <div class="no-posts">
            No blog posts found.
          </div>
        ) : (
          paginatedPosts.map((post) => (
            <article class="post-item">
              <div class="post-meta-top">
                <FormattedDate date={post.data.pubDate} />
              </div>
              <a href={`/posts/${post.id}/`} class="post-link">
                <h2 class="post-title">{post.data.title}</h2>
              </a>
              <p class="post-summary">{post.data.summary || post.data.description}</p>
              <div class="post-meta-bottom">
                {post.data.author && <span class="author-name">{post.data.author}</span>}
                <span class="reading-time">{post.readingTime}</span>
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="tags-list">
                    {post.data.tags.map(tag => (
                      <span class="tag">#{tag}</span>
                    ))}
                  </div>
                )}
              </div>
            </article>
          ))
        )}
      </div>

      {totalPages > 1 && (
        <nav class="pagination">
          <a href="/" class="pagination-link active">1</a>
          {totalPages >= 2 && <a href="/page/2/" class="pagination-link">2</a>}
          {totalPages >= 3 && <a href="/page/3/" class="pagination-link">3</a>}
          {totalPages > 1 && <a href="/page/2/" class="pagination-link next">Next &rarr;</a>}
        </nav>
      )}
    </main>
    <Footer />

    <style>
      .intro-section {
        padding: 4rem 0 3rem 0;
        border-bottom: 1px solid var(--border-subtle);
        margin-bottom: 3rem;
      }

      .page-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--fg-primary);
        margin-bottom: 0.5rem;
        letter-spacing: -0.03em;
      }

      .page-subtitle {
        font-size: 1.1rem;
        color: var(--fg-secondary);
        max-width: 600px;
        margin: 0;
      }

      .posts-list {
        display: flex;
        flex-direction: column;
        gap: 3rem;
        margin-bottom: 5rem;
        max-width: 1000px; /* Increased from 800px */
      }

      .post-item {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        transition: transform 0.2s ease;
        width: 100%; /* Ensure full width within container */
      }
      
      .post-meta-top {
        font-size: 0.85rem;
        color: var(--fg-muted);
        font-family: var(--font-mono);
      }

      .post-link {
        text-decoration: none;
        color: inherit;
        display: block; /* Ensure block for full clickable area */
      }

      .post-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--fg-primary);
        margin: 0;
        line-height: 1.3;
        transition: color 0.2s ease;
      }

      .post-link:hover .post-title {
        color: var(--accent-link);
        text-decoration: none; /* Remove underline */
      }

      .post-item:hover {
        transform: translateY(-2px); /* Subtle lift */
      }

      .post-summary {
        font-size: 1rem;
        color: var(--fg-secondary);
        line-height: 1.6;
        margin: 0.2rem 0 0.8rem 0;
        max-width: 100%; /* Allow full width */
        overflow-wrap: break-word; /* Prevent overflow */
      }

      .post-meta-bottom {
        display: flex;
        align-items: center;
        gap: 1rem;
        font-size: 0.85rem;
        color: var(--fg-muted);
        flex-wrap: wrap; /* Allow wrapping on small screens */
      }

      .author-name {
        font-weight: 500;
        color: var(--fg-secondary);
      }

      .tags-list {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
      }

      .tag {
        background: rgba(255, 255, 255, 0.5); /* Glassy */
        backdrop-filter: blur(4px);
        padding: 0.1rem 0.4rem;
        border-radius: 4px;
        color: var(--fg-secondary);
        font-size: 0.8rem;
        font-weight: 500;
        border: 1px solid var(--border-subtle);
      }

      .pagination {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        margin-bottom: 4rem;
        padding-top: 2rem;
        border-top: 1px solid var(--border-subtle);
      }

      .pagination-link {
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 36px;
        height: 36px;
        padding: 0 0.75rem;
        border-radius: 6px;
        background: transparent;
        border: 1px solid var(--border-subtle);
        color: var(--fg-secondary);
        font-weight: 500;
        font-size: 0.9rem;
        transition: all 0.2s ease;
      }

      .pagination-link:hover {
        border-color: var(--fg-muted);
        color: var(--fg-primary);
        background: var(--bg-secondary);
        text-decoration: none;
      }

      .pagination-link.active {
        background: var(--fg-primary);
        border-color: var(--fg-primary);
        color: white;
      }

      .no-posts {
        text-align: center;
        padding: 4rem;
        color: var(--fg-muted);
        font-style: italic;
      }

      @media (max-width: 640px) {
        .page-title {
          font-size: 2rem;
        }
        
        .intro-section {
          padding: 3rem 0 2rem 0;
          margin-bottom: 2rem;
        }
      }
    </style>
  </body>
</html>
